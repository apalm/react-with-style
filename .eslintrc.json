{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "brace-style": 2,
    "comma-spacing": 2,
    "comma-style": 2,
    "curly": 2,
    "eol-last": 2,
    "indent": [2, 2],
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "one-var": [2, "never"],
    "prefer-spread": 2,
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "space-after-keywords": 2
  }
}
